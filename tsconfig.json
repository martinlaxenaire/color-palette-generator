    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "Bundler"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ]
}